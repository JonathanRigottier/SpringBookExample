<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/context https://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="com.sda.springbook.example" />

    <bean id="myBean" class="com.sda.springbook.example.beans.MyBean">
        <property name="bookName" value="Harry Potter" />
        <property name="bookAuthor" value="J. K. Rowling" />
    </bean>
</beans>